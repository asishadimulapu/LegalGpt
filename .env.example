# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Vector Database
CHROMA_PERSIST_DIR=./data/chroma_db
COLLECTION_NAME=indian_legal_docs

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# For better legal understanding, consider: law-ai/InLegalBERT

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.3

# Legal Reasoning
MIN_CONFIDENCE_THRESHOLD=0.5

# Document Storage
LEGAL_DOCS_PATH=./data/legal_documents
STATUTES_PATH=./data/legal_documents/statutes
JUDGMENTS_PATH=./data/legal_documents/judgments

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/legal_rag.log

# Optional: External APIs
# INDIANKANOON_API_KEY=your_key_here
# SUPREME_COURT_API=your_endpoint_here
